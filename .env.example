# Database Configuration
DATABASE_URL=sqlite:///data/database.db
DATABASE_ECHO=false

# Dray Dog Authentication
DRAYDOG_USERNAME=your_username_here
DRAYDOG_PASSWORD=your_password_here
DRAYDOG_BASE_URL=https://draydog.com

# Image Download Configuration
DOWNLOAD_INTERVAL_MINUTES=10
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5
IMAGE_STORAGE_PATH=data/images
MAX_STORAGE_DAYS=30

# YOLO Model Configuration
YOLO_MODEL_PATH=data/models/yolov8x.pt
DETECTION_CONFIDENCE_THRESHOLD=0.5
TRACKING_ENABLED=true
TRACKING_MAX_DISAPPEARED=30

# OCR Configuration
OCR_ENGINE=easyocr
TESSERACT_CMD=/usr/bin/tesseract

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost
AUTO_REFRESH_INTERVAL_SECONDS=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=data/logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_DOWNLOADS=3
IMAGE_RESIZE_MAX_WIDTH=1920
IMAGE_RESIZE_MAX_HEIGHT=1080

# Alert Configuration
ENABLE_ALERTS=true
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=your_email@gmail.com
ALERT_EMAIL_PASSWORD=your_app_password
ALERT_EMAIL_TO=alerts@yourcompany.com

# Analytics Configuration
DWELL_TIME_THRESHOLD_HOURS=24
THROUGHPUT_CALCULATION_WINDOW_HOURS=24
ANOMALY_DETECTION_SENSITIVITY=0.8

# Redis Configuration (if using Redis for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Development Settings
DEBUG_MODE=false
ENABLE_PROFILING=false
MOCK_CAMERA_DATA=false

# Selenium Configuration
SELENIUM_DRIVER=chrome
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT_SECONDS=30
SELENIUM_IMPLICIT_WAIT_SECONDS=10
SELENIUM_PAGE_LOAD_TIMEOUT_SECONDS=30

# Container Detection Classes
CONTAINER_CLASSES=truck,container,trailer,chassis
VEHICLE_CLASSES=car,truck,bus,motorcycle

# API Configuration (for future integrations)
API_KEY=your_api_key_here
API_RATE_LIMIT_PER_MINUTE=60

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_DESTINATION=data/backups